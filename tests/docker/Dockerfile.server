# Multi-stage build for the lifelog server binary
# Used in Tier 2 container chaos tests

FROM rust:1.86-bookworm AS builder
RUN apt-get update && apt-get install -y \
    mold \
    cmake \
    clang \
    libclang-dev \
    pkg-config \
    libssl-dev \
    libsqlite3-dev \
    libasound2-dev \
    libx11-dev \
    libxtst-dev \
    libxi-dev \
    libleptonica-dev \
    tesseract-ocr \
    libtesseract-dev \
    libv4l-dev \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY . .
RUN cargo build --release -p lifelog-server

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y \
    ca-certificates \
    tesseract-ocr \
    libasound2 \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/lifelog-server-backend /usr/local/bin/lifelog-server
ENTRYPOINT ["lifelog-server"]
