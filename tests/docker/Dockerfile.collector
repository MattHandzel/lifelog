# Multi-stage build for the lifelog collector binary
# Used in Tier 2 container chaos tests

FROM rust:1.86-bookworm AS builder
WORKDIR /app
COPY . .
RUN cargo build --release -p lifelog-collector

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/lifelog-collector /usr/local/bin/lifelog-collector
ENTRYPOINT ["lifelog-collector"]
